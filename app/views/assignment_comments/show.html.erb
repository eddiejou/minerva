<div class="page-header">
  <h3>Assignment Comment #<%= @assignment_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Assignment</dt>
      <dd><%= @assignment_comment.assignment_id %></dd>

      <dt>Body</dt>
      <dd><%= @assignment_comment.body %></dd>

      <dt>User</dt>
      <dd><%= @assignment_comment.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/assignment_comments" class="btn btn-primary">
        Back
      </a>
      <a href="/assignment_comments/<%= @assignment_comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_assignment_comment/<%= @assignment_comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
