<!-- Validation failure messages -->
<% if @assignment.errors.any? %>
  <% @assignment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Assignment: <%= @assignment.title %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_assignment/<%= @assignment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @assignment.title %>">
      </div>

      <!-- Label and input for assignment_file -->
      <div class="form-group">
        <label for="assignment_file" class="control-label">
          Assignment file
        </label>

        <input type="text" id="assignment_file" name="assignment_file" placeholder="Assignment file" class="form-control" value="<%= @assignment.assignment_file %>">
      </div>

      <div class="form-group">
        <label for="course_id" class="control-label">
          Course
        </label>

        <%= select_tag(:course_id, options_from_collection_for_select(Course.all, :id, :name, @assignment.lesson.course.name), :class => "form-control") %>

      </div>

      <div class="form-group">
        <label for="standard_number" class="control-label">
          Standards
        </label>

        <% @assignment.lesson.standards.each do |standard| %>
        <input type="text" id="standard_number" name="standard_number" placeholder="Standard Number" class="form-control" value="<%= standard.number %>">
        <% end %>
      </div>

      <!-- Label and input for lesson_id -->
    <!--  <div class="form-group">
        <label for="lesson_id" class="control-label">
          Lesson
        </label>

        <input type="text" id="lesson_id" name="lesson_id" placeholder="Lesson" class="form-control" value="<%= @assignment.lesson_id %>">
      </div> -->

      <button class="btn btn-warning">
        Update Assignment
      </button>
      or
      <a href="/assignments/<%= @assignment.id %>">Cancel</a>
    </form>
  </div>
</div>
