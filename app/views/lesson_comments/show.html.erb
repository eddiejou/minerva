<div class="page-header">
  <h3>Lesson Comment #<%= @lesson_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Lesson</dt>
      <dd><%= @lesson_comment.lesson_id %></dd>

      <dt>Body</dt>
      <dd><%= @lesson_comment.body %></dd>

      <dt>User</dt>
      <dd><%= @lesson_comment.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/lesson_comments" class="btn btn-primary">
        Back
      </a>
      <a href="/lesson_comments/<%= @lesson_comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_lesson_comment/<%= @lesson_comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
