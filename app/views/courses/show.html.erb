<div class="page-header">
  <h3><img src="<%= @course.image_url %>" class="img-responsive"> <%= current_user.username %>'s <%= @course.name %> Course</h3>
  <a href="/lessons/new/<%= @course.id %>" class="btn btn-lg btn-success">New Lesson</a>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lesson</th>
        <th>Assignment</th>
        <th>Standard</th>
        <th>Action</th>
      </tr>

      <% @course.lessons.each do |lesson| %>
      <tr>
        <td>
          <%= lesson.title %>
          (<a href="/lessons/<%= lesson.id %>">details</a>
          |
          <a href="<%= lesson.lesson_file %>" target="_blank">lesson</a>)
        </td>

        <td>
          <% lesson.assignments.each do |assignment| %>
          <%= assignment.title %>
          (<a href="/assignments/<%= assignment.id %>">details</a>
          |
          <a href="<%= assignment.assignment_file %>" target="_blank">assignment</a>)
          <% end %>
        </td>


        <td>
          <% lesson.standards.each do |standard| %>
          <a href="/standards/<%= standard.id %>"><%= standard.id %></a>
          <% end %>
        </td>

        <td>
          <a href="/courses" class="btn btn-primary">
            Back
          </a>
          <a href="/courses/<%= @course.id %>/edit" class="btn btn-warning">
            Edit
          </a>
          <a href="/delete_course/<%= @course.id %>" class="btn btn-danger" rel="nofollow">
            Delete
          </a>
        </td>
      </tr>
      <% end %>

    </table>
  </div>
</div>
