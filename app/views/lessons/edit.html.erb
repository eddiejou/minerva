<!-- Validation failure messages -->
<% if @lesson.errors.any? %>
<% @lesson.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Edit Lesson: <%= @lesson.title %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_lesson/<%= @lesson.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @lesson.title %>">
      </div>

      <!-- Label and input for lesson_file -->
      <div class="form-group">
        <label for="lesson_file" class="control-label">
          Lesson File
        </label>

        <input type="text" id="lesson_file" name="lesson_file" placeholder="File location" class="form-control" value="<%= @lesson.lesson_file %>">
      </div>

      <!-- Label and input for course_id -->
      <div class="form-group">
        <label for="course_id" class="control-label">
          Course
        </label>

        <%= select_tag(:course_id, options_from_collection_for_select(Course.all, :id, :name, @lesson.course.name), :class => "form-control") %>

      </div>

      <div class="form-group">
        <label for="assignment_file" class="control-label">
          Assignment Files
        </label>

        <% @lesson.assignments.each do |assignment| %>
        <input type="text" id="assignment_file" name="assignment_file" placeholder="Assignment" class="form-control" value="<%= assignment.assignment_file %>">
        <% end %>

      </div>

      <div class="form-group">
        <label for="standard_number" class="control-label">
          Standards
        </label>

        <% @lesson.standards.each do |standard| %>
        <input type="text" id="standard_number" name="standard_number" placeholder="Standard Number" class="form-control" value="<%= standard.number %>">
        <% end %>
      </div>

      <button class="btn btn-warning">
        Update Lesson
      </button>
      or
      <a href="/lessons/<%= @lesson.id %>">Cancel</a>
    </form>
  </div>
</div>
