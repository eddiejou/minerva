<div class="page-header">
  <h1>
    All <%= current_user.username %>'s Assignments
    <a href="/assignments/new" class="btn btn-lg btn-success"><i class="fa fa-plus" aria-hidden="true"></i> New Assignment</a>
  </h1>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Assignment</th>
        <th>Course</th>
        <th>Action</th>
      </tr>

      <% current_user.assignments.each do |assignment| %>
      <tr>
        <td>
          <%= assignment.title %>
          (<a href="/assignments/<%= assignment.id %>">details</a>
          |
          <a href="<%= assignment.assignment_file %>" target="_blank">assignment</a>)
        </td>

        <td>
          <a href="/courses/<%= assignment.course.id %>"><%= assignment.course.name %></a>
        </td>

        <td>
          <a href="/assignments/<%= assignment.id %>/edit" class="btn btn-warning">
            <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
          </a>
          <a href="/delete_assignment/<%= assignment.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
          </a>
        </td>
      </tr>

      <% end %>

    </table>

    <a href="/my_courses_index" class="btn btn-lg btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to My Courses</a>

  </div>
</div>
