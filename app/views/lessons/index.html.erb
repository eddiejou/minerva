<div class="page-header">
  <h1>
    All <%= current_user.username %>'s Lessons
    <a href="/lessons/new" class="btn btn-lg btn-success">New Lesson</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lesson</th>
        <th>Standard</th>
        <th>Course</th>
        <th>Action</th>
      </tr>


      <% @lessons.each do |lesson| %>
      <% if lesson.course.user.id==current_user.id %>
      <tr>
        <td>
          <%= lesson.title %>
          (<a href="/lessons/<%= lesson.id %>">details</a>
          |
          <a href="<%= lesson.lesson_file %>" target="_blank">lesson</a>)
        </td>

        <td>
          <% lesson.standards.each do |standard| %>
          <a href="/standards/<%= standard.id %>"><%= standard.id %></a>
          <% end %>
        </td>

        <td>
          <a href="/courses/<%= lesson.course.id %>"><%= lesson.course.name %></a>
        </td>

        <td>

          <a href="/lessons/<%= lesson.id %>/edit" class="btn btn-warning">
            Edit Lesson
          </a>
          <a href="/delete_lesson/<%= lesson.id %>" class="btn btn-danger" rel="nofollow">
            Delete Lesson
          </a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>

    </table>

    <a href="/my_courses_index" class="btn btn-lg btn-primary">Back to My Courses</a>

  </div>
</div>
