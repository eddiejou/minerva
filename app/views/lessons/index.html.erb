<div class="page-header">
  <h1>
    All <%= current_user.username %>'s Lessons
    <a href="/lessons/new" class="btn btn-lg btn-success"><i class="fa fa-plus fa-2x" aria-hidden="true"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lesson</th>
        <th>Standard</th>
        <th>Course</th>
        <th>Action</th>
      </tr>


      <% @lessons.each do |lesson| %>
      <% if lesson.course.user.id==current_user.id %>
      <tr>
        <td>
          <%= lesson.title %>
          (<a href="/lessons/<%= lesson.id %>">details</a>
          |
          <a href="<%= lesson.lesson_file %>" target="_blank">lesson</a>)
        </td>

        <td>
          <ul>
            <% lesson.standards.each do |standard| %>
            <li>
              <a href="/standards/<%= standard.id %>"><%= standard.standard_number %></a>
            </li>
            <% end %>
          </ul>
        </td>

        <td>
          <a href="/courses/<%= lesson.course.id %>"><%= lesson.course.name %></a>
        </td>

        <td>

          <a href="/lessons/<%= lesson.id %>/edit" class="btn btn-warning">
            <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
          </a>
          <a href="/delete_lesson/<%= lesson.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>

    </table>

    <a href="/my_courses_index" class="btn btn-lg btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to My Courses</a>

  </div>
</div>
