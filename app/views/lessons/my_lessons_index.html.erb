<div class="page-header">
  <h1>
    <%= current_user.username %>'s Lessons
    <a href="/lessons/new" class="btn btn-lg btn-success">New Lesson</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>File location</th>
        <th>Course</th>
        <th>Actions</th>
      </tr>

      <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.title %></td>
        <td><%= lesson.lesson_file %></td>
        <td><%= lesson.course_id %></td>
        <td>
          <a href="/lessons/<%= lesson.id %>" class="btn btn-primary">Show</a>
          <a href="/lessons/<%= lesson.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_lesson/<%= lesson.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
