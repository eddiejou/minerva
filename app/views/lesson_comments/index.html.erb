<div class="page-header">
  <h1>
    Lesson comments
    <a href="/lesson_comments/new" class="btn btn-lg btn-success">New Lesson comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lesson</th>
        <th>Body</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @lesson_comments.each do |lesson_comment| %>
      <tr>
        <td><%= lesson_comment.lesson_id %></td>
        <td><%= lesson_comment.body %></td>
        <td><%= lesson_comment.user_id %></td>
        <td>
          <a href="/lesson_comments/<%= lesson_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/lesson_comments/<%= lesson_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_lesson_comment/<%= lesson_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
