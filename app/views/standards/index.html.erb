<div class="page-header">
  <h1>
    All Standards
    <a href="/standards/new" class="btn btn-lg btn-success"><i class="fa fa-plus fa-2x" aria-hidden="true"></i> New Standard</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Standard Number</th>
        <th>Standard Description</th>
        <th>Actions</th>
      </tr>

      <% @standards.each do |standard| %>
      <tr>
        <td><%= standard.standard_number %></td>
        <td><%= standard.description %></td>
        <td>
          <a href="/standards/<%= standard.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
          </a>
          <a href="/delete_standard/<%= standard.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash fa-2x" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <a href="/my_courses_index" class="btn btn-lg btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i>  Back to My Courses</a>

  </div>
</div>
