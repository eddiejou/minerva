<div class="page-header">
  <h1>
    Assignments
    <a href="/assignments/new" class="btn btn-lg btn-success">New Assignment</a>
  </h1>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Assignment</th>
        <th>Course</th>
        <th>Action</th>
      </tr>

      <% @assignments.each do |assignment| %>
      <tr>
        <td>
          <%= assignment.title %>
          (<a href="/assignments/<%= assignment.id %>">details</a>
          |
          <a href="<%= assignment.assignment_file %>" target="_blank">assignment</a>)
        </td>



      </tr>

      <% end %>

    </table>

    <a href="/my_courses_index" class="btn btn-lg btn-primary">Back to My Courses</a>

  </div>
</div>
