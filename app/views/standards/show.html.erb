<div class="page-header">
  <h3>Standard #<%= @standard.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <div class="panel panel-default">
        <dt>Standard number</dt>
        <dd><%= @standard.standard_number %></dd>
      </div>

      <div class="panel panel-default">
        <dt>Standard Description</dt>
        <dd><%= @standard.description %></dd>
      </div>

      <div class="panel panel-default">
        <dt>Lessons with the </br>Same Standard</dt>
        <% @standard.lessons.each do |lesson|%>
        <dd>
          <ul class="ul-index">
            <li>
              Lesson: <a href="/lessons/<%= lesson.id %>" %> <%= lesson.title %></a>
            </li>
            <li>
              Course: <a href="/courses/#{lesson.course.id}"> <%= lesson.course.name %></a>
            </li>
            <li>
              Creator: <%= lesson.user.username %>
            </li>
          </ul>
        </dd>
        <% end %>
      </dt>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/standards" class="btn btn-primary">
        <i class="fa fa-arrow-left" aria-hidden="true"></i> Back to Standards
      </a>
      <a href="/standards/<%= @standard.id %>/edit" class="btn btn-warning">
        <i class="fa fa-wrench" aria-hidden="true"></i> Edit Standard
      </a>
      <a href="/delete_standard/<%= @standard.id %>" class="btn btn-danger" rel="nofollow">
        <i class="fa fa-trash" aria-hidden="true"></i> Delete Standard
      </a>
    </div>

  </div>
</div>
