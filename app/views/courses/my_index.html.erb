<div class="page-header">
  <h1>
    <%= current_user.username %>'s Courses
    <a href="/courses/new" class="btn btn-lg btn-success top-button"><i class="fa fa-plus fa-2x" aria-hidden="true"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Course</th>
        <th>Actions</th>
      </tr>

      <% @courses.each do |course| %>
      <% if course.user_id==current_user.id %>
      <tr>
        <td><a href="/courses/<%= course.id %>"><img src="<%= course.image_url %>" class="index-picture-size"></a></td>
        <td><a href="/courses/<%= course.id %>"><h5><%= course.name %></h5></a></td>
        <td>
          <!-- Details -->
          <a href="/courses/<%= course.id %>" class="btn btn-primary"><i class="fa fa-info-circle fa-2x" aria-hidden="true"></i></a>
          <!-- Edit -->
          <a href="/courses/<%= course.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil fa-2x" aria-hidden="true"></i></a>
          <!-- Delete -->
          <a href="/delete_course/<%= course.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash fa-2x" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% else %>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
