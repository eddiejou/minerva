<div class="page-header">
  <h1>
    All Courses
    <a href="/courses/new" class="btn btn-lg btn-success">New Course</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Image URL</th>
        <th>Course</th>
        <th>Length</th>
        <th>Actions</th>
      </tr>

      <% @courses.each do |course| %>
      <tr>
        <td><img src="<%= course.image_url %>" class="img-responsive"></td>
        <td><%= course.name %></td>
        <td><%= course.length %></td>
        <td>
          <% if course.user.id==current_user.id %>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">Course Details</a>
          <a href="/courses/<%= course.id %>/edit" class="btn btn-warning">Edit Course</a>
          <a href="/delete_course/<%= course.id %>" class="btn btn-danger" rel="nofollow">Delete Course</a>
          <% else %>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">Course Details</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
