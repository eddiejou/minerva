<!-- Validation failure messages -->
<% if @assignment_like.errors.any? %>
  <% @assignment_like.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Assignment Like</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_assignment_like" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @assignment_like.user_id %>">
      </div>

      <!-- Label and input for assignment_id -->
      <div class="form-group">
        <label for="assignment_id" class="control-label">
          Assignment
        </label>

        <input type="text" id="assignment_id" name="assignment_id" placeholder="Assignment" class="form-control" value="<%= @assignment_like.assignment_id %>">
      </div>

      <button class="btn btn-success">
        Create Assignment Like
      </button>
      or
      <a href="/assignment_likes">Cancel</a>
    </form>
  </div>
</div>
