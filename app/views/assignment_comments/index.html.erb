<div class="page-header">
  <h1>
    Assignment comments
    <a href="/assignment_comments/new" class="btn btn-lg btn-success">New Assignment comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Assignment</th>
        <th>Body</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @assignment_comments.each do |assignment_comment| %>
      <tr>
        <td><%= assignment_comment.assignment_id %></td>
        <td><%= assignment_comment.body %></td>
        <td><%= assignment_comment.user_id %></td>
        <td>
          <a href="/assignment_comments/<%= assignment_comment.id %>" class="btn btn-primary">Show</a>
          <a href="/assignment_comments/<%= assignment_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_assignment_comment/<%= assignment_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
