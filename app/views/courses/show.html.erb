<div class="page-header">
  <h3><img src="<%= @course.image_url %>" class="img-responsive"> <%= @course.user.username %>'s <%= @course.name %> Course</h3>
  <% if @course.user.id==current_user.id %>
  <a href="/lessons/new/<%= @course.id %>" class="btn btn-lg btn-success">Add Lesson</a>
  <% else %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Lesson</th>
        <th>Assignment</th>
        <th>Standard</th>
        <th>Action</th>
      </tr>

      <% @course.lessons.each do |lesson| %>
      <tr>
        <td>
          <%= lesson.title %>
          (<a href="/lessons/<%= lesson.id %>">details</a>
          |
          <a href="<%= lesson.lesson_file %>" target="_blank">lesson</a>)
        </td>

        <td>
          <% lesson.assignments.each do |assignment| %>
          <%= assignment.title %>
          (<a href="/assignments/<%= assignment.id %>">details</a>
          |
          <a href="<%= assignment.assignment_file %>" target="_blank">assignment</a>)
          <% end %>
        </td>


        <td>
          <% lesson.standards.each do |standard| %>
          <a href="/standards/<%= standard.id %>"><%= standard.id %></a>
          <% end %>
        </td>

        <td>
          <% if current_user.id==lesson.course.user.id %>
          <a href="/lessons/<%= lesson.id %>/edit" class="btn btn-warning">
            Edit Lesson
          </a>
          <a href="/delete_lesson/<%= lesson.id %>" class="btn btn-danger" rel="nofollow">
            Delete Lesson
          </a>
          <% else %>
          <% end %>
        </td>
      </tr>
      <% end %>

    </table>

    <% if @course.user.id == current_user.id %>
    <a href="/my_courses_index" class="btn btn-lg btn-primary">Back to My Courses</a>
    <% else %>
    <a href="/my_courses_index" class="btn btn-lg btn-primary">Back to My Courses</a>
    <a href="/courses" class="btn btn-lg btn-primary">All Courses</a>
    <% end %>

  </div>
</div>
