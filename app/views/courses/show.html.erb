<div class="page-header">
  <h3>Course #<%= @course.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><a href="/lessons"<%= @course.name %></dd>

      <dt>Length</dt>
      <dd><%= @course.length %></dd>

      <dt>Image url</dt>
      <dd><img src="<%= @course.image_url %>"></dd>

      <dt>User</dt>
      <dd><%= @course.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/courses" class="btn btn-primary">
        Back
      </a>
      <a href="/courses/<%= @course.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_course/<%= @course.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
